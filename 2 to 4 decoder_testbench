module tb_decoder_2to4;
  reg [1:0]a;
  wire [3:0]b;
  decoder_2to4 uut(.a(a), .b(b));
  initial
    begin
      $display("a | b");
       a = 2'b00; #10; $display("%b | %b", a, b);
       a = 2'b01; #10; $display("%b | %b", a, b);
       a = 2'b10; #10; $display("%b | %b", a, b);
       a = 2'b11; #10; $display("%b | %b", a, b);
  end
endmodule
