// half_adder_tb.v â€” Testbench for half adder
module half_adder_tb;
  reg A, B;
  wire SUM, CARRY;

  // Instantiate the half adder
  half_adder uut (
    .A(A),
    .B(B),
    .SUM(SUM),
    .CARRY(CARRY)
  );

  initial begin
    $display("A B | SUM CARRY");
    $monitor("%b %b |  %b    %b", A, B, SUM, CARRY);

    // Test all combinations
    A = 0; B = 0; #10;
    A = 0; B = 1; #10;
    A = 1; B = 0; #10;
    A = 1; B = 1; #10;

    $finish;
  end
endmodule
